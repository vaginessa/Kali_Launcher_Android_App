<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".KaliLauncher$PlaceholderFragment"
    android:id="@+id/background"
    android:background="#ff000000">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_kali_shell"
        android:id="@+id/button_start_kali"
        android:clickable="true"
        android:enabled="true"
        android:textColor="#ffffffff"
        android:layout_below="@+id/button_start_kalimenu"
        android:layout_alignRight="@+id/button_start_kalimenu"
        android:layout_alignEnd="@+id/button_start_kalimenu"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kill_kali"
        android:id="@+id/button_stop_kali"
        android:clickable="true"
        android:textColor="#ffffffff"
        android:layout_marginTop="116dp"
        android:layout_below="@+id/button_start_kali"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_kali_menu"
        android:id="@+id/button_start_kalimenu"
        android:clickable="true"
        android:enabled="true"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

</RelativeLayout>
